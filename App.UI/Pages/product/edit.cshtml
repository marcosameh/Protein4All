@page "{Id:int}"
@model App.UI.Pages.product.editModel
@{
    Layout = "/Pages/Shared/DashboardLayout.cshtml";
}


<!-- Basic Form Inputs card start -->
<div class="card">
    <div class="card-header">
        <h3>Add New Product</h3>
    </div>
    <div class="card-block">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Url</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Product.Url" class="form-control">
                    <span class="text-danger" asp-validation-for="Product.Url"></span>
                </div>
                <input type="hidden" asp-for="Product.Id" />
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Product.Title" class="form-control">
                    <span class="text-danger" asp-validation-for="Product.Title"></span>
                </div>

            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Sub Title</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Product.SubTitle" class="form-control">
                    <span class="text-danger" asp-validation-for="Product.SubTitle"></span>
                </div>
                <input type="hidden"  asp-for="Product.Photo" />
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Display Order</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Product.DisplayOrder" class="form-control">
                    <span class="text-danger" asp-validation-for="Product.DisplayOrder"></span>
                </div>

            </div>
            <div class="form-group row">

                <label class="col-sm-2 col-form-label">Is Active</label>
                <div class="col-sm-10">
                    <input class="form-check-input" type="checkbox" asp-for="Product.IsActive" id="checkbox1" checked>

                </div>





            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Select Box</label>
                <div class="col-sm-10">

                    <select asp-for="Product.CategoryId" class=" dropdown dropdown-primary" asp-items="@(SelectList)Model.CategoryList">
                        <option>Choose Category</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Product.CategoryId"></span>
                </div>
            </div>




            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Upload File</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" asp-for="Product.PhotoFile">
                    
                </div>

            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                    <textarea rows="5" asp-for="Product.Description" cols="5" class="form-control"
                              placeholder="Description About Product"></textarea>
                    <span class="text-danger" asp-validation-for="Product.Description"></span>
                </div>

            </div>
            <div class="text-right">
                <button class="btn btn-out-dashed waves-effect waves-light btn-primary btn-square" type="submit">Edit Product</button>
            </div>
        </form>

    </div>
</div>
<!-- Basic Form Inputs card end -->

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

}
