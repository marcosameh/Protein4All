@page  "{Id:int}"
@model App.UI.Pages.product.deleteModel
@{
    Layout = "/Pages/Shared/DashboardLayout.cshtml";
}


<!-- Basic Form Inputs card start -->
<div class="text-center">
    <h3 class="text-danger">Are You Sure You Want To delete This Data</h3>
</div>
<div class="card">

    <div class="card-block">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Url</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Product.Url" class="form-control" readonly>
                    <span class="text-danger" asp-validation-for="Product.Url"></span>
                </div>
                <input type="hidden" asp-for="Product.Id" readonly />
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Product.Title" class="form-control" readonly>
                    <span class="text-danger" asp-validation-for="Product.Title"></span>
                </div>

            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Price</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Product.Price" class="form-control">
                    <span class="text-danger" asp-validation-for="Product.Price"></span>
                </div>

            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Sub Title</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Product.SubTitle" class="form-control" readonly>
                    <span class="text-danger" asp-validation-for="Product.SubTitle"></span>
                </div>
                <input type="hidden" asp-for="Product.Photo" />
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Display Order</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Product.DisplayOrder" class="form-control" readonly>
                    <span class="text-danger" asp-validation-for="Product.DisplayOrder"></span>
                </div>

            </div>
            <div class="form-group row">

                <label class="col-sm-2 col-form-label">Is Active</label>
                <div class="col-sm-10">
                    <input class="form-check-input" type="checkbox" asp-for="Product.IsActive" id="checkbox1" readonly>

                </div>





            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Category</label>
                <div class="col-sm-10">

                    <select asp-for="Product.CategoryId" class=" dropdown dropdown-primary" asp-items="@(SelectList)Model.CategoryList" readonly>
                        <option>Choose Category</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Product.CategoryId"></span>
                </div>
            </div>




            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Photo </label>
                <div class="col-sm-10">
                    <img src="~/product-photo/@Model.Product.Photo" alt="Product Photo " style="width:100px;height:150px;" />

                </div>

            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                    <textarea rows="5" asp-for="Product.Description" cols="5" class="form-control"
                              placeholder="Description About Product" disabled></textarea>
                    <span class="text-danger" asp-validation-for="Product.Description"></span>
                </div>

            </div>
            <div class="text-center">
                <button class="btn btn-out-dashed waves-effect waves-light btn-danger btn-square" type="submit">Delete</button>
            </div>
        </form>

    </div>
</div>
