@page "{Id:int}"
@model App.UI.Pages.article_category.deleteModel
@{
    Layout = "/Pages/Shared/DashboardLayout.cshtml";
}
<html>
<head>
    <link href="~/limonte-sweetalert2/sweetalert2.css" rel="stylesheet" />
</head>
<body>
    <div class="h-100 row align-items-center">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h5 class="text-center text-danger">Delete  Category</h5>
                    <!--<span>Add class of <code>.form-control</code> with <code>&lt;input&gt;</code> tag</span>-->
                </div>
                <div class="card-block">
                    <form class="form-material" method="post">
                        <div class="form-group form-default">
                            <input type="hidden" asp-for="Category.Id" />
                            <label>Category Name</label>
                            <input type="text" asp-for="Category.Name" class="form-control" required="" readonly>
                            <span class="form-bar text-danger" asp-validation-for="Category.Name"></span>

                        </div>

                        <div class="form-group form-default">
                            <label class="">Display Order</label>
                            <input type="text" asp-for="Category.DisplayOrder" class="form-control" required="" readonly>
                            <span class="form-bar text-danger" asp-validation-for="Category.DisplayOrder"></span>

                        </div>
                      
                        <div class="text-right">
                            <button class="btn btn-out-dashed waves-effect waves-light btn-danger btn-square" type="submit">Delete Category</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    @section Scripts {


        <script src="~/limonte-sweetalert2/sweetalert2.min.js"></script>
        <script>
            $(document).ready(function () {



                Swal.fire("Warning!", "If You Delete This Category The Category Will Deleted and All Related Articles");





            });
        </script>
    }

</body>
</html>
