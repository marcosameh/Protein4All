@page "{Id:int}"
@model App.UI.Pages.article.editModel
@{
    Layout = "/Pages/Shared/DashboardLayout.cshtml";
}


<!-- Basic Form Inputs card start -->
<div class="card">
    <div class="card-header">
        <h3>Edit Article</h3>
    </div>
    <div class="card-block">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Url</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="article.Url" class="form-control">
                    <span class="text-danger" asp-validation-for="article.Url"></span>
                </div>
                <input type="hidden" asp-for="article.Id" />
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">News Date</label>
                <div class="col-sm-10">
                    <input type="date" asp-for="article.ArticalDate" class="form-control">
                    <span class="text-danger" asp-validation-for="article.ArticalDate"></span>
                </div>

            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="article.Title" class="form-control">
                    <span class="text-danger" asp-validation-for="article.Title"></span>
                </div>

            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Sub Title</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="article.SubTitle" class="form-control">
                    <span class="text-danger" asp-validation-for="article.SubTitle"></span>
                </div>
                <input type="hidden" asp-for="article.Photo" />
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                    <textarea rows="5" asp-for="article.Description" cols="5" class="form-control"
                              placeholder="Description About Product"></textarea>
                    <span class="text-danger" asp-validation-for="article.Description"></span>
                </div>

            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Category</label>
                <div class="col-sm-10">

                    <select asp-for="article.CategoryId" class=" dropdown dropdown-primary" asp-items="@(SelectList)Model.CategoryList">
                        <option>Choose Category</option>
                    </select>
                    <span class="text-danger" asp-validation-for="article.CategoryId"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Display Order</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="article.DisplayOrder" class="form-control">
                    <span class="text-danger" asp-validation-for="article.DisplayOrder"></span>
                </div>

            </div>




            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Upload File</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" asp-for="article.PhotoFile">

                </div>

            </div>

            <div class="text-right">
                <button class="btn btn-out-dashed waves-effect waves-light btn-primary btn-square" type="submit">Edit Article</button>
            </div>
        </form>

    </div>
</div>
<!-- Basic Form Inputs card end -->

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

}

