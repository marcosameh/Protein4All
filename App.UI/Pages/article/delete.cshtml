@page "{Id:int}"
@model App.UI.Pages.article.deleteModel
@{
    Layout = "/Pages/Shared/DashboardLayout.cshtml";
}
<div class="text-center">
    <h3 class="text-danger">Are You Sure You Want to Delete This Data </h3>
</div>
<div class="card">

    <div class="card-block">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Url</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="article.Url" class="form-control" readonly>
                    <span class="text-danger" asp-validation-for="article.Url"></span>
                </div>
                <input type="hidden" asp-for="article.Id" readonly />
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">News Date</label>
                <div class="col-sm-10">
                    <input type="date" asp-for="article.ArticalDate" class="form-control" readonly>
                    <span class="text-danger" asp-validation-for="article.ArticalDate"></span>
                </div>

            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="article.Title" class="form-control" readonly>
                    <span class="text-danger" asp-validation-for="article.Title"></span>
                </div>

            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Sub Title</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="article.SubTitle" class="form-control" readonly>
                    <span class="text-danger" asp-validation-for="article.SubTitle"></span>
                </div>
                <input type="hidden" asp-for="article.Photo" />
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                    <textarea rows="5" asp-for="article.Description" cols="5" class="form-control"
                              placeholder="Description About Product" readonly></textarea>
                    <span class="text-danger" asp-validation-for="article.Description"></span>
                </div>

            </div>



            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Photo </label>
                <div class="col-sm-10">
                    <img src="~/artical-photos/@Model.article.Photo" alt="Product Photo " style="width:100px;height:150px;" />

                </div>

            </div>


            <div class="text-right">
                <button class="btn btn-out-dashed waves-effect waves-light btn-danger btn-square" type="submit">Delete Article</button>
            </div>
        </form>

    </div>
</div>