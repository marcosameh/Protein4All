@page
@model App.UI.Pages.article.addModel
@{
    Layout = "/Pages/Shared/DashboardLayout.cshtml";
}


<!-- Basic Form Inputs card start -->
<div class="card">
    <div class="card-header">
        <h3>Add New Article</h3>
    </div>
    <div class="card-block">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Url</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Artical.Url" class="form-control">
                    <span class="text-danger" asp-validation-for="Artical.Url"></span>
                </div>

            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">News Date</label>
                <div class="col-sm-10">
                    <input type="date" asp-for="Artical.ArticalDate" class="form-control">
                    <span class="text-danger" asp-validation-for="Artical.ArticalDate"></span>
                </div>

            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Artical.Title" class="form-control">
                    <span class="text-danger" asp-validation-for="Artical.Title"></span>
                </div>

            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Sub Title</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Artical.SubTitle" class="form-control">
                    <span class="text-danger" asp-validation-for="Artical.SubTitle"></span>
                </div>

            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                    <textarea rows="5" asp-for="Artical.Description" cols="5" class="form-control"
                              placeholder="Description About Product"></textarea>
                    <span class="text-danger" asp-validation-for="Artical.Description"></span>
                </div>

            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Category</label>
                <div class="col-sm-10">

                    <select asp-for="Artical.CategoryId" class=" dropdown dropdown-primary" asp-items="@(SelectList)Model.CategoryList">
                        <option>Choose Category</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Artical.CategoryId"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Display Order</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Artical.DisplayOrder" class="form-control">
                    <span class="text-danger" asp-validation-for="Artical.DisplayOrder"></span>
                </div>

            </div>


            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Upload File</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" asp-for="Artical.PhotoFile" id="uploadedfile">
                    <input type="hidden" class="form-control" asp-for="Artical.Photo" id="photo">
                    <span class="text-danger" asp-validation-for="Artical.Photo"></span>
                </div>

            </div>

            <div class="text-right">
                <button class="btn btn-out-dashed waves-effect waves-light btn-primary btn-square" type="submit">Add Artical</button>
            </div>
        </form>

    </div>
</div>
<!-- Basic Form Inputs card end -->

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        $(document).ready(function () {

            $('#uploadedfile').change(function () {
                if ($('#uploadedfile').val != null)
                {
                    $("#photo").val("22203");
                }

            });

        });
    </script>
}
